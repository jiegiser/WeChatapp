.main-container {
  height: 100%;
  display: flex;
  flex-direction: column; }

header {
  height: 40px;
  width: 100%;
  background: white; }

header ul {
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-around; }

header ul li {
  width: 44px;
  height: 20px; }

header ul .head-l image {
  width: 24px;
  height: 20px;
  margin: 0 5px 0 10px; }

header ul .head-r image {
  width: 24px;
  height: 20px;
  margin: 0 10px 0 5px; }

header ul .head-c {
  flex: 1;
  height: 26px;
  background: #fff;
  border-radius: 13px; }

header ul .head-c .btn {
  float: left;
  width: 20px;
  height: 26px; }

header ul .head-c .btn image {
  width: 14px;
  height: 14px;
  margin: 6px; }

header ul .head-c input {
  float: left;
  font-size: 12px;
  line-height: 26px;
  margin-left: 5px;
  color: #ccc; }

  .scroll-view-x {
